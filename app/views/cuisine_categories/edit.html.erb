<!-- Validation failure messages -->
<% if @cuisine_category.errors.any? %>
  <% @cuisine_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Cuisine Category #<%= @cuisine_category.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_cuisine_category/<%= @cuisine_category.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for cuisine -->
      <div class="form-group">
        <label for="cuisine" class="control-label">
          Cuisine
        </label>

        <input type="text" id="cuisine" name="cuisine" placeholder="Cuisine" class="form-control" value="<%= @cuisine_category.cuisine %>">
      </div>

      <button class="btn btn-warning">
        Update Cuisine Category
      </button>
      or
      <a href="/cuisine_categories/<%= @cuisine_category.id %>">Cancel</a>
    </form>
  </div>
</div>
